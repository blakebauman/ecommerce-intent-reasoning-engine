# Database
DATABASE_URL=postgresql://intent_engine:intent_engine_dev@localhost:5432/intent_engine

# Redis
REDIS_URL=redis://localhost:6379/0

# Anthropic API (for LLM reasoning)
ANTHROPIC_API_KEY=sk-ant-...

# Shopify Integration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_access_token

# API Authentication
API_KEY=your-secure-api-key

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# LLM Settings (Pydantic AI model name without provider prefix)
LLM_MODEL=claude-sonnet-4-5
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.1

# Intent Matching Thresholds
FAST_PATH_THRESHOLD=0.85
AMBIGUITY_GAP_THRESHOLD=0.10
COMPOUND_DETECTION_THRESHOLD=0.60

# Performance Settings
EMBEDDING_CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=100
