# Database
DATABASE_URL=postgresql://intent_engine:intent_engine_dev@localhost:5432/intent_engine

# Redis
REDIS_URL=redis://localhost:6379/0

# Anthropic API (for LLM reasoning)
ANTHROPIC_API_KEY=sk-ant-...

# Shopify Integration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_access_token

# Adobe Commerce Optimizer (Merchandising Services - catalog only)
# See https://developer.adobe.com/commerce/services/optimizer/
# ADOBE_COMMERCE_OPTIMIZER_TENANT_ID=your-tenant-id
# ADOBE_COMMERCE_OPTIMIZER_REGION=na1
# ADOBE_COMMERCE_OPTIMIZER_ENVIRONMENT=sandbox
# ADOBE_COMMERCE_OPTIMIZER_CATALOG_VIEW_ID=your-catalog-view-id
# ADOBE_COMMERCE_OPTIMIZER_LOCALE=en_US
# ADOBE_COMMERCE_OPTIMIZER_PRICE_BOOK_ID=

# API Authentication
API_KEY=your-secure-api-key

# CORS (comma-separated or JSON array; use * for allow-all in dev)
# CORS_ORIGINS=*
# Production: CORS_ORIGINS=https://app.example.com,https://admin.example.com

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# LLM Settings (Pydantic AI model name without provider prefix)
LLM_MODEL=claude-sonnet-4-5
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.1

# Intent Matching Thresholds
FAST_PATH_THRESHOLD=0.85
AMBIGUITY_GAP_THRESHOLD=0.10
COMPOUND_DETECTION_THRESHOLD=0.60

# Performance Settings
EMBEDDING_CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=100

# --- Production (see docs/PRODUCTION.md) ---
# SERVICE_ENVIRONMENT=production
# TENANT_DEV_MODE=false
# Tenant store: 'memory' (default) or 'db' for multi-tenant production
# TENANT_STORE_BACKEND=db
# Admin API key for /v1/admin/tenants (list, create/update). Only used when TENANT_STORE_BACKEND=db.
# ADMIN_API_KEY=your-admin-secret
# LOG_LEVEL=INFO
# LOG_JSON=true
# OTLP_ENDPOINT=http://localhost:4317
# ENABLE_TRACING=true
# ENABLE_METRICS=true
